@model ASP.netCore.MVC.EFCore.EmployeeMgm.ViewModels.DepartmentViewModel
@*  with MVC tagHelper
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add Department";
}


<div class="p-4 container">
    <div class="p-4 row">
        <div class="col-md-6">
            <h3>Add Department</h3>
        </div>
        <div class="p-4 row">
            <div class="col-md-6">
                <form asp-controller="Department" asp-action="Add" method="post">
                <div class="md-3">
                    <label for="" calss="form-label fw-bold">Department Name</label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <button type="submit" class="btn btn-dark">Add</button>
                </form>
            </div>
        </div>

    </div>
    
    

</div>