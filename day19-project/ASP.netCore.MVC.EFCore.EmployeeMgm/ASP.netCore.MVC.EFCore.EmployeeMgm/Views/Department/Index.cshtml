@model IEnumerable<ASP.netCore.MVC.EFCore.EmployeeMgm.ViewModels.DepartmentViewModel>
@{
    ViewData["Title"]="All Departments";
}

<div class="container p-4">
    <div class="col-md-12" p-4>
    <div class="text-center">
        <h1 class="display-4">All Departments</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Department ID</th>
                <th>Department Name</th>
                <th>Operation</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.DepartmentId</td>
                    <td>@department.Name</td>
                    <td> <a  class="btn btn-primary" asp-action="Edit" asp-controller="Department" asp-route-id="@department.DepartmentId">Edit</a> |

                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@department.DepartmentId" onClick="return confirm('Are you sure you want to delete it?')">Delete</a>
                        

                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    </div>
</div>