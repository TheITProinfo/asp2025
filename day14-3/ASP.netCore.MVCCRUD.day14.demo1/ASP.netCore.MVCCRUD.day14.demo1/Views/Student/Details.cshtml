
@{
    ViewData["Title"] = "show student details";
}
@model ASP.netCore.MVCCRUD.day14.demo1.Models.StudentViewModel

<h2>Student Details</h2>
<div class="card mt-4" style="max-width: 500px;">
    <div class="card-body">
        <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>ID:</strong> @Model.Id</p>

        <a asp-action="Index" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
