@{
    ViewData["Title"] = "Employee management system";
}

<div class="container p-5">
    <div class="row justify-content-center">
        <div class="col-12 mb-4 text-center">
            <h2>Welcome to Employee Management System</h2>
        </div>

        <!-- Card 1: View Employees -->
        <div class="col-md-5 mb-4">
            <div class="card shadow rounded-4">
                <div class="card-body text-center">
                    <h4 class="card-title">Employee Management</h4>
                    <p class="card-text">View and manage all employees.</p>
                    <a class="btn btn-primary" asp-controller="Employee" asp-action="Index">View Employees</a>
                </div>
            </div>
        </div>

        <!-- Card 2: View Departments -->
        <div class="col-md-5 mb-4">
            <div class="card shadow rounded-4">
                <div class="card-body text-center">
                    <h4 class="card-title">Department Management</h4>
                    <p class="card-text">View and manage departments efficiently.</p>
                    <a class="btn btn-secondary" asp-controller="Department" asp-action="Index">View Departments</a>
                </div>
            </div>
        </div>
    </div>
</div>

